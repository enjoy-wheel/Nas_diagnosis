{
    "name": "Mnist_LeNet",
    "n_gpu": 1,

    "arch": {
        "type": "MnistModel",
        "args": {}
    },
    "data_loader": {
        "type": "MnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "controller_optimizer": {
        "type": "Adam",
        "args": {
            "lr": 3.5e-4,
            "lr_cosine": false,
            "lr_max": 0.05,
            "lr_min": 0.001
        }
    },
    "shared_optimizer": {
        "type": "SGD",
        "args":{
            "lr": 20.0,
            "weight_decay": 0.96,
            "weight_decay_after": 15.0
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    },
    "PTB_regularizations": {
        "activation_regularization": {
            "state": false,
            "amount": 2.0
        },
        "temporal_activation_regularization": {
            "state": false,
            "amount": 1.0
        },
        "norm_stabilizer_regularization": {
            "state": false,
            "amount": 1.0,
            "fixed_point": 5.0
        }
    }
}
